        "maps",
        "nyc",
        "panoramas"
    ],
    "author": "Vinny Sanchez",
    "license": "ISC",
    "bugs": {
        "url": "https://github.com/tdbts/2Blocks/issues"
    },
    "homepage": "https://github.com/tdbts/2Blocks#readme",
    "devDependencies": {
        "babel-core": "^6.8.0",
        "babel-loader": "^6.2.4",
        "babel-polyfill": "^6.8.0",
        "babel-preset-es2015": "^6.6.0",
        "chai": "^3.5.0",
        "eslint": "^2.9.0",
        "mocha": "^2.4.5",
        "sinon": "^1.17.4",
        "watch": "^0.18.0",
        "webpack": "^1.13.0"
    },
    "peerDependencies": {
