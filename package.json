{
    "name": "2blocks",
    "version": "0.0.1",
    "description": "A game for those who keep their eyes on the street.",
    "main": "index.js",
    "scripts": {
        "test": "find . -name test -type d ! -path './node_modules/*' -exec mocha {} --compilers js:babel-core/register --recursive ';'",
