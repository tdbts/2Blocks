{
	"env": {
		// "browser": true, // --> Don't specify until true
		"es6": true, 
		"node": true, 
		"mocha": true
	},

	"extends": "eslint:recommended", 
	
	"parserOptions": {
		"ecmaFeatures": {
			modules: true
		}, 
		"ecmaVersion": 6, 
		"sourceType": "module"
	},

	"globals": {
		// "angular": 1
	}, 

	"rules": {
	    "eqeqeq": [2,"smart"],
	    "no-eval": 2,
	    "no-extra-bind": 2,
	    "no-floating-decimal": 2,
	    "no-loop-func": 2,
	    "no-new-wrappers": 2,
	    "no-return-assign": 2,
	    "no-useless-call": 2,
	    "no-with": 2,
	    "comma-spacing": [1,{"after":true}],
	    "eol-last": 1,
	    "new-cap": [2,{"newIsCap":true}],
	    "newline-after-var": [1,"always"],
	    "no-array-constructor": 2,
	    "semi-spacing": [2,{"after":true}],
	    "semi": [2,"always"],
	    "keyword-spacing": ["error", {"before": true, "after": true, "overrides": {}}],
	    "arrow-spacing": [2,{"before":true,"after":true}],
	    "constructor-super": 2,
	    "no-const-assign": 2,
	    "no-this-before-super": 2,
	    "no-var": 2,
	    "object-shorthand": 2,
	    "prefer-const": 2,
	    "prefer-spread": 2
	}
}
